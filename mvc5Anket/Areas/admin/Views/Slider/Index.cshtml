@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<mvc5Anket.Areas.admin.Models.DTO.SliderVM>

<!-- Page-Level Plugin Scripts-->
<link href="~/Areas/admin/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.js"></script>
<script src="~/Scripts/dataTables.bootstrap.js"></script>
<div class="row">
    <!--  page header -->
    <div class="col-lg-12">
        <h1 class="page-header"> Slider Listesi </h1>
    </div>
    <!-- end  page header -->


    <div class="row">
        <div class="col-lg-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Advanced Tables
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Slider Başlığı</th>
                                    <th>Güncelleme</th>
                                    <th>Silme</th>



                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="a_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Title</td>
                                        <td><a href="UpdateSlider/@item.ID"><img src="~/Areas/admin/Content/image/update.png" width="30" height="30" /></a></td>
                                        <td><a href="Index"><img src="~/Areas/admin/Content/image/temizle.png" width="30" height="30" style="cursor:pointer" onclick="Delete(@item.ID)" /></a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</div>
<script>
    function Delete(id)
    {
        debugger;
        debugger;
        $.ajax({
            url: "/admin/Slider/DeleteSlider/"+ id,
            //data:id,
            type: "POST",         
            //işlem basarılıysa tasarımsal olarakda satırı uçurur
            success: function (result) {
                debugger;
                if(result == "1"){
                    $("#a_" + id).hide();
                }
                else
                    alert("silerken bir sorun çıktı!");
                //windows.location.reload();
            }
        })
    }
</script>
<script>
    $(document).ready(function () {
        $('#dataTables-example').dataTable();
    });
</script>