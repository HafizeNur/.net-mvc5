@{
    Layout = null;
}
@model mvc5Anket.Areas.admin.Models.DTO.LoginModel
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Samsun Büyükşehir Belediyesi Anket Sistemi</title>
    <!-- Core CSS - Include with every page -->
    <link href="~/Areas/admin/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Areas/admin/Content/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Areas/admin/Content/css/pace-theme-big-counter.css" rel="stylesheet" />
    <link href="~/Areas/admin/Content/css/style.css" rel="stylesheet" />
    <link href="~/Areas/admin/Content/css/main-style.css" rel="stylesheet" />

</head>

<body class="body-Login-back">

    <div class="container">

        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center logo-margin ">
                <img src="~/Areas/admin/Content/image/s_logo.png" alt="" />
            </div>
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Lütfen giriş yapınız...</h3>
                    </div>
                    <div class="panel-body">
                         @using (Html.BeginForm("Index","Login"))
                         {
                             <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", @placeholder = "E-mail" })
                                </div>
                                    @Html.ValidationMessageFor(x => x.EMail)
                                <div class="form-group">
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Sifre" })
                                </div>
                                    @Html.ValidationMessageFor(x => x.Password)
                                @*<div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>*@
                                <!-- Change this to a button or input when using this as a form -->
                                 <button type="submit" class="btn btn-lg btn-success btn-block">Giriş</button>
                            </fieldset>
                         }
                                                    
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Scripts - Include with every page -->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.metisMenu.js"></script>

</body>


</html>
