
@{
    ViewBag.Title = "AddAdminUser";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

@model mvc5Anket.Areas.admin.Models.DTO.AdminUserVM

<div class="col-lg-6">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header"> Admin Ekle</h1>
    </div>

    <!--End Page Header -->
    @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagesPart.cshtml")

    @using (Html.BeginForm("AddAdminUser", "AdminUser", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.EMail)
            @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", @placeholder = "Admin mail adresi giriniz..." })
            @Html.ValidationMessageFor(x => x.EMail)
        </div>
            @Html.LabelFor(x => x.Password)
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Admin şifre giriniz..." })
            @Html.ValidationMessageFor(x => x.Password)

        <div>
           
        </div>

        <button type="submit" class="btn btn-primary">Admin Ekle</button>
        <button type="reset" class="btn btn-success">Admin Reset </button>
    }

</div>