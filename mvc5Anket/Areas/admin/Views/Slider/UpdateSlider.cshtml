
@{
    ViewBag.Title = "UpdateSlider";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

@model mvc5Anket.Areas.admin.Models.DTO.SliderVM

<div class="col-lg-6">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header"> Slider Güncelle </h1>
    </div>

    <!--End Page Header -->
    @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagesPart.cshtml")

    @using (Html.BeginForm("UpdateSlider", "Slider", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Title)
            @Html.TextAreaFor(x => x.Title, new { @class = "form-control", @placeholder = "Slider başlığı giriniz..." })
            @Html.ValidationMessageFor(x => x.Title)
        </div>


        <div>
            @Html.LabelFor(x => x.PostImage)
            <input type="file" multiple name="PostImage" accept="image/gif, image/jpeg, image/png" />
        </div>

        <button type="submit" class="btn btn-primary">Slider Güncelle</button>
        <button type="reset" class="btn btn-success">Slider Reset </button>
    }

</div>

