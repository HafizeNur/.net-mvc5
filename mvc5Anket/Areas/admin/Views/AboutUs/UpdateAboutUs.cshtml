
@{
    ViewBag.Title = "UpdateAboutUs";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}


@model mvc5Anket.Areas.admin.Models.DTO.AboutUsVM
<div class="row">
    <!-- page header -->
    <div class="col-lg-12">
        <h1 class="page-header">Hakkımızda Sayfasının</h1>
    </div>
    <!--end page header -->
</div>
<div class="row">
    <div class="col-lg-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">


                        <!--End Page Header -->
                        @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagesPart.cshtml")

                        <script src="~/Areas/admin/Content/ckeditor/ckeditor.js"></script>
                        <!-- form start -->
                        @using (Html.BeginForm("UpdateAboutUs", "AboutUs", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            
                              <div class="form-group">
                           @Html.LabelFor(x => x.Title)
                           @Html.TextAreaFor(x => x.Title, new { @class = "form-control", @placeholder = "Slider başlığı giriniz..." })
                           @Html.ValidationMessageFor(x => x.Title)
                             </div>

                            <div class="form-group">
                                <label>İçerik</label>
                                @Html.TextAreaFor(x => x.Content, new { @class = "ckeditor" })
                            </div>


                            <button type="submit" class="btn btn-primary">İçerik Ekle</button>
                            <button type="reset" class="btn btn-success">İçerik Reset </button>

                        }

                    </div>
                </div>
            </div>
        </div>
        <!-- End Form Elements -->
    </div>
</div>




