
@{
    ViewBag.Title = "UpdateAdminUser";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

@model mvc5Anket.Areas.admin.Models.DTO.AdminUserVM

<div class="col-lg-6">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header"> Admin Güncelle </h1>
    </div>

    <!--End Page Header -->
    @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagesPart.cshtml")

    @using (Html.BeginForm("UpdateAdminUser", "AdminUser", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.EMail)
            @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", @placeholder = "Admin yeni mail adresi giriniz..." })
            @Html.ValidationMessageFor(x => x.EMail)
        </div>
        @Html.LabelFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Admin için yeni şifre giriniz..." })
        @Html.ValidationMessageFor(x => x.Password)

        <div>

        </div>

        <button type="submit" class="btn btn-primary">Admin Güncelle</button>
        <button type="reset" class="btn btn-success">Admin Reset </button>
    }

</div>

